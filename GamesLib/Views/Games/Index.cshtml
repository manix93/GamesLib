@using GamesLib.Models
@model System.Collections.Generic.List<GamesLib.Models.Game>

@{
    ViewBag.Title = "title";
    //Layout = "_Layout";
}

<h2>Games</h2>
@Html.ActionLink("Add game", "New", "Games", null, new { @class = "btn btn-success" })
<table class="table table-striped table-responsive">
    <thead class="thead-dark">
    <tr>
        <th>Title</th>
        <th>Genres</th>
        <th>Released Date</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var game in @Model)
    {
        <tr>
            <td>@Html.ActionLink(game.Title, "Details", "Games", new { id = game.Id }, null)</td>
            <td>
                @foreach (var genre in game.Genres)
                {
                    @Html.Raw($"{genre.Name} ")
                }
            </td>
            <td>@game.ReleaseDate.ToShortDateString()</td>
            <td>@Html.ActionLink("Delete", "Delete", "Games", new { id = game.Id }, new { @class = "btn btn-danger btn-xs"})</td>
        </tr>
    }
    </tbody>
</table>
