@model GamesLib.ViewModels.GameGenresFormViewModel

@{
    ViewBag.Title = "title";
    //Layout = "_Layout";
}

<h2>Add Game</h2>

@using (Html.BeginForm("Create", "Games"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Game.Title)
        @Html.TextBoxFor(m => m.Game.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Game.ReleaseDate)
        @Html.TextBoxFor(m => m.Game.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.ReleaseDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Game.Description)
        @Html.TextAreaFor(m => m.Game.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Game.Genres)
        @Html.ListBoxFor(m => m.SelectedGenres, new MultiSelectList(Model.Genres, "Id", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.Genres);
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
}
